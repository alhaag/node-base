extends layout

block content

    // Content Header (Page header)
    section.content-header
        h1= error.status
            |  Error Page
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    |  Home
            li
                a(href='#') Examples
            li.active 404 error
    // Main content
    section.content
        .error-page
            h2.headline.text-yellow  404
            .error-content
                h3
                    i.fa.fa-warning.text-yellow
                    |  Oops! Página não encontrada.
                p
                    | We could not find the page you were looking for.
                    | Meanwhile, you may
                    a(href='/') return to dashboard
                    |  or try using the search form.
                form.search-form
                    .input-group
                        input.form-control(type='text', name='search', placeholder='Search')
                        .input-group-btn
                            button.btn.btn-warning.btn-flat(type='submit', name='submit')
                                i.fa.fa-search
                    // /.input-group
            // /.error-content
        // /.error-page
    // /.content

//block content
    h1= message
    h2= error.status
    pre #{error.stack}
