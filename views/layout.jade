doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    block title
      title Node Skeleton
    // Tell the browser to be responsive to screen width
    meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
    block styles
      // Bootstrap 3.3.5
      link(rel='stylesheet', href='libs/bootstrap-3.3.5/css/bootstrap.min.css')
      // Font Awesome
      link(rel='stylesheet', href='libs/font-awesome-4.4.0/css/font-awesome.min.css')
      // Theme style
      link(rel='stylesheet', href='libs/AdminLTE/dist/css/AdminLTE.min.css')
      //
        AdminLTE Skins. Choose a skin from the css/skins
        folder instead of downloading all of them to reduce the load.
      link(rel='stylesheet', href='libs/AdminLTE/dist/css/skins/_all-skins.min.css')
  body.hold-transition.skin-green
    .wrapper
      header.main-header
        // Logo
        a.logo(href='index2.html')
          // mini logo for sidebar mini 50x50 pixels
          span.logo-mini
            b A
            | LT
          // logo for regular state and mobile devices
          span.logo-lg
            b Node
            | Skeleton
        // Header Navbar: style can be found in header.less
        nav.navbar.navbar-static-top(role='navigation')
          // Sidebar toggle button
          a.sidebar-toggle(href='#', data-toggle='offcanvas', role='button')
            span.sr-only Toggle navigation
          // Navbar Right Menu
          .navbar-custom-menu
            ul.nav.navbar-nav
              // User Account: style can be found in dropdown.less
              li.dropdown.user.user-menu
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  img.user-image(src='libs/AdminLTE/dist/img/user2-160x160.jpg', alt='User Image')
                  span.hidden-xs Alexander Pierce
                ul.dropdown-menu
                  // User image
                  li.user-header
                    img.img-circle(src='libs/AdminLTE/dist/img/user2-160x160.jpg', alt='User Image')
                    p
                      | Alexander Pierce - Web Developer
                      small Member since Nov. 2012
                  // Menu Body
                  li.user-body
                    .row
                      .col-xs-4.text-center
                        a(href='#') Followers
                      .col-xs-4.text-center
                        a(href='#') Sales
                      .col-xs-4.text-center
                        a(href='#') Friends
                    // /.row
                  // Menu Footer
                  li.user-footer
                    .pull-left
                      a.btn.btn-default.btn-flat(href='#') Profile
                    .pull-right
                      a.btn.btn-default.btn-flat(href='#') Sign out
              // Control Sidebar Toggle Button
              li
                a(href='#', data-toggle='control-sidebar')
                  i.fa.fa-gears
      // Left side column. contains the logo and sidebar
      aside.main-sidebar
        // sidebar: style can be found in sidebar.less
        section.sidebar
          // search form
          form.sidebar-form(action='#', method='get')
            .input-group
              input.form-control(type='text', name='q', placeholder='Buscar...')
              span.input-group-btn
                button#search-btn.btn.btn-flat(type='submit', name='search')
                  i.fa.fa-search
          // /.search form
          // sidebar menu: : style can be found in sidebar.less
          ul.sidebar-menu
            li.header MENU PRINCIPAL
            li.treeview.active
              a(href='/')
                i.fa.fa-edit
                span Início
            li
              a(href='/quemsomos')
                i.fa.fa-book
                span Quem Somos
            li
              a(href='/users')
                i.fa.fa-book
                span Users
            li
              a(href='/upload')
                i.fa.fa-book
                span Upload
            li
              a(href='/contato')
                i.fa.fa-book
                span Contato
            li.header PÁGINAS DE EXEMPLO
            li.treeview
              a(href='/login')
                i.fa.fa-edit
                span Login
            li.treeview
              a(href='/lockscreen')
                i.fa.fa-edit
                span Bloquear
        // /.sidebar
      // Content Wrapper. Contains page content
      .content-wrapper
        block content
      // /.content-wrapper
      footer.main-footer
        .pull-right.hidden-xs
          b Version
          |  1.0
        strong
          | Copyright © 2014-2015
          a(href='http://discoverytecnologia.com.br')  Discovery Tecnologia
          | .
        |  Todos os direitos reservados.
      // Control Sidebar
      aside.control-sidebar.control-sidebar-dark
        // Create the tabs
        ul.nav.nav-tabs.nav-justified.control-sidebar-tabs
          li
            a(href='#control-sidebar-home-tab', data-toggle='tab')
              i.fa.fa-home
          li
            a(href='#control-sidebar-settings-tab', data-toggle='tab')
              i.fa.fa-gears
        // Tab panes
        .tab-content
          // Home tab content
          #control-sidebar-home-tab.tab-pane
            h3.control-sidebar-heading Recent Activity
            ul.control-sidebar-menu
              li
                a(href='javascript::;')
                  i.menu-icon.fa.fa-birthday-cake.bg-red
                  .menu-info
                    h4.control-sidebar-subheading Langdon's Birthday
                    p Will be 23 on April 24th
              li
                a(href='javascript::;')
                  i.menu-icon.fa.fa-user.bg-yellow
                  .menu-info
                    h4.control-sidebar-subheading Frodo Updated His Profile
                    p New phone +1(800)555-1234
              li
                a(href='javascript::;')
                  i.menu-icon.fa.fa-envelope-o.bg-light-blue
                  .menu-info
                    h4.control-sidebar-subheading Nora Joined Mailing List
                    p nora@example.com
              li
                a(href='javascript::;')
                  i.menu-icon.fa.fa-file-code-o.bg-green
                  .menu-info
                    h4.control-sidebar-subheading Cron Job 254 Executed
                    p Execution time 5 seconds
            // /.control-sidebar-menu
            h3.control-sidebar-heading Tasks Progress
            ul.control-sidebar-menu
              li
                a(href='javascript::;')
                  h4.control-sidebar-subheading
                    | Custom Template Design
                    span.label.label-danger.pull-right 70%
                  .progress.progress-xxs
                    .progress-bar.progress-bar-danger(style='width: 70%')
              li
                a(href='javascript::;')
                  h4.control-sidebar-subheading
                    | Update Resume
                    span.label.label-success.pull-right 95%
                  .progress.progress-xxs
                    .progress-bar.progress-bar-success(style='width: 95%')
              li
                a(href='javascript::;')
                  h4.control-sidebar-subheading
                    | Laravel Integration
                    span.label.label-warning.pull-right 50%
                  .progress.progress-xxs
                    .progress-bar.progress-bar-warning(style='width: 50%')
              li
                a(href='javascript::;')
                  h4.control-sidebar-subheading
                    | Back End Framework
                    span.label.label-primary.pull-right 68%
                  .progress.progress-xxs
                    .progress-bar.progress-bar-primary(style='width: 68%')
            // /.control-sidebar-menu
          // /.tab-pane
          // Settings tab content
          #control-sidebar-settings-tab.tab-pane
            form(method='post')
              h3.control-sidebar-heading General Settings
              .form-group
                label.control-sidebar-subheading
                  | Report panel usage
                  input.pull-right(type='checkbox', checked='')
                p
                  | Some information about this general settings option
              // /.form-group
              .form-group
                label.control-sidebar-subheading
                  | Allow mail redirect
                  input.pull-right(type='checkbox', checked='')
                p
                  | Other sets of options are available
              // /.form-group
              .form-group
                label.control-sidebar-subheading
                  | Expose author name in posts
                  input.pull-right(type='checkbox', checked='')
                p
                  | Allow the user to show his name in blog posts
              // /.form-group
              h3.control-sidebar-heading Chat Settings
              .form-group
                label.control-sidebar-subheading
                  | Show me as online
                  input.pull-right(type='checkbox', checked='')
              // /.form-group
              .form-group
                label.control-sidebar-subheading
                  | Turn off notifications
                  input.pull-right(type='checkbox')
              // /.form-group
              .form-group
                label.control-sidebar-subheading
                  | Delete chat history
                  a.text-red.pull-right(href='javascript::;')
                    i.fa.fa-trash-o
              // /.form-group
          // /.tab-pane
      // /.control-sidebar
      //
        Add the sidebar's background. This div must be placed
        immediately after the control sidebar
      .control-sidebar-bg
    // ./wrapper

block scripts
  // jQuery 2.1.4
  script(src='libs/jquery/jquery-2.1.4.min.js')
  // translate
  script(src="/libs/i18next/i18next-1.11.1.min.js")
  // Bootstrap 3.3.5
  script(src='libs/bootstrap-3.3.5/js/bootstrap.min.js')
  // AdminLTE App
  script(src='libs/AdminLTE/dist/js/app.min.js')
  // AdminLTE for demo purposes
  script(src='libs/AdminLTE/dist/js/demo.js')
